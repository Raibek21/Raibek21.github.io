.nav-wrap {
 max-width: 1170px; margin: 0 auto;

    }
.main-navigation {

  clear: both;
  display: block;
  float: left;
  width: 100%;
  font-family: 'Roboto';
  font-size: 16px;
  text-transform: none;
}

.main-navigation ul {
  display: none;
  list-style: none;
  margin: 0;
  padding-left: 0px;
}

.main-navigation ul ul {
  box-shadow: 0 3px 3px rgba(0, 0, 0, 0.2);
  float: left;
  position: absolute;
  top: 100%;
  left: -999em;
  z-index: 99999; 
      font-size: 15px;
  text-transform: lowercase;
  }

.main-navigation ul ul ul {
  left: -999em;
  top: 0;
 
}

.main-navigation ul ul li:hover > ul,
.main-navigation ul ul li.focus > ul {
  left: 100%;
  
}

.main-navigation ul ul a {
  padding: 10px 10px 10px 14px;
  width: 200px;
   background: #4d423b;
}
.main-navigation ul ul a:hover {
   background: #63554d; 
}

.main-navigation ul li:hover > ul,
.main-navigation ul li.focus > ul {
  left: auto;
}

.main-navigation li {
  float: left;
  position: relative;
}

.main-navigation a {
  padding: 14px 14px;
  color: #f7f1d1;
  display: block;
  text-decoration: none;
}
.main-navigation a:hover {
  color: #f9f6ef;
  text-decoration: underline;
}




/*-----my------*/
.menu-item-has-children>a::before {
    content: "\f107";
    font-family: FontAwesome;
    line-height: 1em;
    speak: none;
    position: absolute;
    right: 0px;
    top: 16px;
  
    
}

.sub-menu .menu-item-has-children>a::before {
    content: "\f105";
    font-family: FontAwesome;
    line-height: 1em;
    speak: none;
    position: absolute;
    right: 0px;
    top: 12px;
    padding-right: 5px;
}


button.menu-toggle {
  background: #443d3a;
  border: 0px;
  width: 100%;
  cursor: pointer;
  font-size: 18px;
  color: #f7f1d1;
  text-align: left;  
}

button.menu-toggle .zakaz-button { float: right;  margin-top:2px; }
button.menu-toggle .zakaz-button a {padding: 8px; }


button.menu-toggle::before {
 content: "\f0c9";
font-family: FontAwesome;
font-size: 20px;
line-height: 2em;
speak: none;
color: #f7f1d1;
text-align: center;
display: inline-block;
padding-right: 6px;
}




/* Small menu. */
.menu-toggle,
.main-navigation.toggled ul {
  display: block;
}



.site-main .comment-navigation, .site-main
.posts-navigation, .site-main
.post-navigation {
  margin: 0 0 1.5em;
  overflow: hidden;
}

.comment-navigation .nav-previous,
.posts-navigation .nav-previous,
.post-navigation .nav-previous {
  float: left;
  width: 50%;
}

.comment-navigation .nav-next,
.posts-navigation .nav-next,
.post-navigation .nav-next {
  float: right;
  text-align: right;
  width: 50%;
}

@media (min-width: 767px) {
  .menu-toggle {
    display: none;
  }
  .main-navigation ul {
    display: block;   
   
  }

}

/* ----- */ 
@media (max-width: 767px) {
.main-navigation {
padding: 0px;
}


.main-navigation li {
  float: none;
  width: 100%; 
}

.main-navigation a {
  background: #4d423b;
  text-decoration: underline;

}

.main-navigation a:hover {
   background: #63554d;
  color: #fdfbfb;
  text-decoration: underline;
}


.main-navigation ul ul {
  float: none;
  position: relative;
  top: 100%;
  left: 0em;
  z-index: 99999; 
     border: 1px solid #897b72;
  }

.main-navigation ul ul a {
  width: 100%;
    background: #584d45; 
 
}


.main-navigation ul ul ul,
.main-navigation ul ul li:hover > ul,
.main-navigation ul ul li.focus > ul {
  left: 0;
 }


.main-navigation.toggled button.menu-toggle::before {
content: "\f00d";
}


.menu-item-has-children>a::before {
    content: "";
  
}

.sub-menu .menu-item-has-children>a::before {
   content: "";
  }

}





